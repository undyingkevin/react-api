{
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
  "compilerOptions": {
    "lib": ["ES2023"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}